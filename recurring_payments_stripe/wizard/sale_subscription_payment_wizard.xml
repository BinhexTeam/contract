<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View sale.subscription.payment.wizard form -->
    <record id="view_sale_subscription_payment_wizard_form" model="ir.ui.view">
        <field name="name">sale.subscription.payment.wizard.form</field>
        <field name="model">sale.subscription.payment.wizard</field>
        <field name="arch" type="xml">
            <form string="Tokenizar Método de Pago">
                <group>
                    <field name="subscription_id" readonly="1" />
                    <field name="card_number" />
                    <field name="card_exp_month" />
                    <field name="card_exp_year" />
                    <field name="card_cvc" />
                </group>
                <footer>
                    <button string="Guardar Método de Pago" type="object"
                        name="action_create_token" class="oe_highlight" />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <!-- Action sale.subscription.payment.wizard -->
    <record id="action_sale_subscription_payment_wizard"
        model="ir.actions.act_window">
        <field name="name">Sale Subscription Payment Wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.subscription.payment.wizard</field>
        <field name="view_mode">form</field>
        <field name="binding_model_id" ref="model_sale_subscription" />
        <field name="target">new</field>
    </record>

</odoo>
